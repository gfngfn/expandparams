    \else%
      \expandafter\ifpluraltokenlist\expandafter{\t@tforcs}{%
        \expandafter\expandafter\expandafter%
          \l@toks%
        \expandafter\expandafter\expandafter%
          =%
        \expandafter\expandafter\expandafter%
          {%
        \expandafter%
