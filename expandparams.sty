    \ifnum\trmt@count>#2%
      \ifnum\trmt@count<#3%
        \expandafter\ifpluraltokenlist\expandafter{\trmt@tforcs}{%
          \expandafter\expandafter\expandafter%
            \trmt@toks%
          \expandafter\expandafter\expandafter%
            =%
          \expandafter\expandafter\expandafter%
            {%
          \expandafter%
            \the%
          \expandafter%
            \trmt@toks%
          \expandafter%
