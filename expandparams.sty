        \expandafter\expandafter\expandafter\expandafter\expandafter\expandafter\expandafter%
          {%
        \expandafter\expandafter\expandafter%
          \the%
        \expandafter\expandafter\expandafter%
          \l@toks%
        \expandafter%
          \inserted@defcs%
        \expandafter%
          {%
          \t@tforcs%
          }%
          }%
      }{%
        \expandafter\expandafter\expandafter\expandafter\expandafter\expandafter\expandafter%
          \l@toks%
        \expandafter\expandafter\expandafter\expandafter\expandafter\expandafter\expandafter%
          =%
        \expandafter\expandafter\expandafter\expandafter\expandafter\expandafter\expandafter%
          {%
        \expandafter\expandafter\expandafter%
          \the%
        \expandafter\expandafter\expandafter%
          \l@toks%
        \expandafter
